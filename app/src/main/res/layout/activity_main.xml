<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_button_background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="341dp"
        android:layout_height="100dp"
        android:text="Welcome to My Profile "
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#16DFCC"
        android:textColorLink="#03A9F4"
        android:textSize="38sp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="474dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/journey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:text="Click here to start our journey"
        android:textColor="#283593"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="607dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="294dp"
        android:layout_height="436dp"
        android:background="@drawable/intro_button_background"
        app:srcCompat="@drawable/picture1"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="258dp"
        android:layout_height="89dp"
        android:rotation="-4"
        app:srcCompat="@drawable/bottom_white"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="683dp"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="5dp"
        android:background="@color/teal_200"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="450dp"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/divider2"
        android:layout_width="409dp"
        android:layout_height="5dp"
        android:background="@color/teal_200"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="588dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>